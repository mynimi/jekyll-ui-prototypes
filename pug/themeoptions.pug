extends layout.pug

block vars
    - var page = { title: "Theme Options", bodyclass: "preview-open" }
    include includes/postlist.pug

block content
    .middle
        h1
            span(lang="en") Theme Options
            span(lang="de") Theme Optionen
        .cards
            .card
                .card-content
                    h2
                        span(lang="en") Dimensions
                        span(lang="de") Dimensionen
                    form
                        .wrap
                            label(for="root-font-size")
                                span(lang="en") Root Font Size [px]
                                span(lang="de") Grundschriftgrösse [px]
                            input(type="number" value="16" name="root-font-size" id="root-font-size")
                        .wrap
                            label(for="main-container-width")
                                span(lang="en") Main Container Width [%]
                                span(lang="de") Hauptcontainer Breite [%]
                            input(type="number" value="80" min="1" max="100" name="main-container-width" id="main-container-width")
                        .wrap
                            label(for="main-max-width")
                                span(lang="en") Main Container Max Width [px]
                                span(lang="de") Maximalbreite Hauptcontainer [px]
                            input(type="number" value="900" name="main-max-width" id="main-max-width")
                        .wrap
                            label(for="gutter-width")
                                span(lang="en") Gutter Width [px]
                                span(lang="de") Gutter [px]
                            input(type="number" value="20" name="gutter-width" id="gutter-width")
            .card
                .card-content
                    h2
                        span(lang="en") Colors
                        span(lang="de") Farben
                    form
                        .wrap
                            label(for="background-color")
                                span(lang="en") Background Color
                                span(lang="de") Hintergrundfarbe
                            input(type="color" value="#f8f8f8" name="background-color" id="background-color")
                        .wrap
                            label(for="main-color")
                                span(lang="en") Main Font Color
                                span(lang="de") Schriftfarbe
                            input(type="color" value="#3b3b3e" name="main-color" id="main-color")
                        .wrap
                            label(for="primary-color")
                                span(lang="en") Primary Color
                                span(lang="de") Primäre Farbe
                            input(type="color" value="#bbd0e9" name="primary-color" id="primary-color")
                        .wrap
                            label(for="scnd-color")
                                span(lang="en") Secondary Color
                                span(lang="de") Sekundäre Farbe
                            input(type="color" value="#333333" name="scnd-color" id="scnd-color")
            .card
                .card-content
                    h2
                        span(lang="en") Looks
                        span(lang="de") Optik
                    form
                        .wrap
                            label.up(for="header") Featured Image
                            .header.media-chooser(style="padding: 10px;")
                                img
                            a.btn(data-togglepopup="media") Choose File
                        div.radio.input
                            .label Layout
                            input(type="radio" name="main-layout" id="full" value="full" checked)
                            label(for="full")
                                span(lang="en") No Sidebar
                                span(lang="de") Keine Sidebar
                            br
                            input(type="radio" name="main-layout" id="left" value="left")
                            label(for="left")
                                span(lang="en") Sidebar Left
                                span(lang="de") Sidebar Links
                            br
                            input(type="radio" name="main-layout" id="right" value="right")
                            label(for="right")
                                span(lang="en") Sidebar Right
                                span(lang="de") Sidebar Rechts
        a.btn(href="#").resetoptions
            span(lang="en") Reset All
            span(lang="de") Alle Zurücksetzen
        a.btn(href="#").saveoptions
            span(lang="en") Save Changes
            span(lang="de") Änderungen speichern
block additional
    .preview-frame
        iframe(src="prev-index.html")
