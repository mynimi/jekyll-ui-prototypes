extends layout.pug

block vars
    - var page = { title: "Configuration" }
    include includes/postlist.pug

block content
    .middle
        h1
            span(lang="en") Configuration
            span(lang="de") Konfiguration
        .cardholder
            .card
                .card-content
                    h2
                        span(lang="en") General
                        span(lang="de") Allgemein
                    form
                        .wrap
                            label(for="title")
                                span(lang="en") Title
                                span(lang="de") Titel
                            input(type="text" name="title" id="title")
                        .wrap
                            label(for="url") URL
                            input(type="url" value="" name="url" id="url")
                        .wrap
                            label(for="desc")
                                span(lang="en") Description
                                span(lang="de") Beschreibung
                            input(type="text" value="" name="desc" id="desc")
                        .wrap
                            label(for="author")
                                span(lang="en") Author
                                span(lang="de") Autor
                            input(type="text" value="" name="author" id="author")
                    h2
                        span(lang="en") Theme Variables
                        span(lang="de") Theme Variablen
                    form
                        .wrap
                            label(for="insta") Instagram
                            input(type="text" placeholder="@username" name="insta" id="insta")
                        .wrap
                            label(for="twitter") Twitter
                            input(type="text" placeholder="@username" name="twitter" id="twitter")
                        .wrap
                            label(for="fb") Facebook
                            input(type="text" placeholder="@username" name="fb" id="fb")
        a.btn(href="#").saveconfig
            span(lang="en") Save Changes
            span(lang="de") Ã„nderungen speichern
