extends layout.pug

block vars
    - var page = { title: "Posts", subtitle: "Test", author: "author", description: "description", tags: ["tag1", "tag2", "tag3"] }
    
block content
    .middle
        h1 
            span(lang="en") Edit Post
            span(lang="de") Beitrag Bearbeiten
    .cards-alt
        .main
            .card
                .card-content
                    form
                        .wrap
                            label(for="edit-title")
                                span(lang="en") Title 
                                span(lang="de") Titel
                            input(type="text" name="edit-title" id="edit-title")
                        .wrap
                            label(for="edit-content-html")
                                span(lang="en") Content
                                span(lang="de") Inhalt
                            textarea(type="text" name="edit-content-html" id="edit-content-html")
        .secondary
            .card
                .card-content
                    h2 Meta
                    .wrap
                        label(for="edit-description")
                            span(lang="en") Meta Description 
                            span(lang="de") Meta Beschreibung
                        input(type="text" name="edit-description" id="edit-description")
                    .wrap
                        label(for="edit-date").up
                            span(lang="en") Date 
                            span(lang="de") Datum
                        input(type="date" name="edit-date" id="edit-date")
                    div.radio.input
                        .label Layout
                        input(type="radio" name="edit-layout" id="full" value="full")
                        label(for="full")
                            span(lang="en") No Sidebar
                            span(lang="de") Keine Sidebar
                        br
                        input(type="radio" name="edit-layout" id="left" value="left")
                        label(for="left")
                            span(lang="en") Sidebar Left
                            span(lang="de") Sidebar Links
                        br
                        input(type="radio" name="edit-layout" id="right" value="right")
                        label(for="right")
                            span(lang="en") Sidebar Right
                            span(lang="de") Sidebar Rechts
                    .wrap
                        label.up(for="edit-featimg") Featured Image
                        .feat-img.media-chooser(style="padding: 10px;")
                            img
                        a.btn(data-togglepopup="media") Choose File
                    .wrap
                        label(for="edit-tags") Tags
                        input(type="text" name="edit-tags" id="edit-tags")
            .card
                .card-content
                    h2 Includes
    a.btn(href="prev-post.html").preview
        span(lang="en") Preview
        span(lang="de") Vorschau
    a.btn(href="posts.html").publishedit
        span(lang="en") Publish
        span(lang="de") Publizieren
    a.btn(href="posts.html").savedraft
        span(lang="en") Save Draft
        span(lang="de") Entwurf speichern
    a.btn(href="posts.html").cancel
        span(lang="en") Cancel
        span(lang="de") Abbrechen
                
